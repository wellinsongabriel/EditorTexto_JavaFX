              <MenuItem fx:id="menuCopiar" disable="true" mnemonicParsing="false" onAction="#copiar" text="Copiar                     CTRL+C" />
                  <MenuItem mnemonicParsing="false" onAction="#colar" text="Colar                       CTRL+V" />
